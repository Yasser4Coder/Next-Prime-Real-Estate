# Next Prime Real Estate - Apache config for Hostinger (SPA + routing)
# This file is copied to dist/ on build. Upload dist/ contents to public_html.

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the request is for an existing file or directory, serve it
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Otherwise send everything to index.html so React Router handles the route
  RewriteRule ^ index.html [L]
</IfModule>

# Disable directory listing
Options -Indexes

